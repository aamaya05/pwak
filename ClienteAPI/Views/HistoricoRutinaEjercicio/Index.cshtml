@model IEnumerable<ClienteAPI.Models.HistoricoRutinaEjercicioViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_adm.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear nuevo cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdHisRutEjer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdHistRutina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEjercicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repeticiones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Series)
